<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SalesConfirmationActivity">

    <RelativeLayout
            android:id="@+id/view1"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="230dp">

        <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Order"
                android:textColor="@android:color/white"
                android:textSize="25sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 20 January 2020"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:textSize="17sp"
        />

        <TextView
                android:layout_below="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmation"
                android:textColor="@android:color/white"
                android:textSize="25sp"
        />

        <TextView
                android:layout_below="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Be Paid"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:textSize="25sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1,000,000"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"

        />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/view2"
            android:layout_below="@+id/view1"
            android:padding="20dp"
            android:layout_above="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:textSize="15sp"
        />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItemsSaleConf"
                android:layout_below="@+id/tv3"
                android:layout_marginTop="10dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvItemsSaleConf"
                android:layout_marginTop="5dp"
                android:text="Subtotal"
                android:gravity="right"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp"
        />

        <TextView
                android:id="@+id/tvSubTot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvItemsSaleConf"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Rp 1,200,000"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp"
        />

        <TextView
                android:id="@+id/tv5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSubTot"
                android:layout_marginTop="5dp"
                android:text="Discount"
                android:gravity="right"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp"
        />

        <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSubTot"
                android:gravity="right"
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Rp 200,000"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp"
        />

        <TextView
                android:id="@+id/tv6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDiscount"
                android:layout_marginTop="5dp"
                android:text="Total"
                android:textStyle="bold"
                android:gravity="right"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp"
        />

        <TextView
                android:id="@+id/tvTotPayConf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDiscount"
                android:gravity="right"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Rp 1,000,000"
                android:textColor="@color/colorSecondaryText"
                android:textSize="15sp"
        />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPay"
            android:text="Pay Now!"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
    />

</RelativeLayout>