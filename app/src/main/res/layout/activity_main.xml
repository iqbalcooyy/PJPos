<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.MainActivity">

    <TextView
            android:id="@+id/tvProfil1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TB. Putra Jaya"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
    />

    <TextView
            android:id="@+id/tvProfil2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProfil1"
            android:text="Supplier Bahan Bangunan"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
    />

    <androidx.cardview.widget.CardView
            android:layout_below="@+id/tvProfil2"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="-25dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="30dp"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:id="@+id/btnSales"
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="Sale"
                        android:background="@drawable/rounded_edittext"
                        android:drawableTop="@drawable/ic_lock"
                        android:paddingTop="50dp"
                />

                <Button
                        android:id="@+id/btnPurchase"
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="Purchase"
                        android:background="@drawable/rounded_edittext"
                        android:drawableTop="@drawable/ic_lock"
                        android:paddingTop="50dp"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="Report"
                        android:background="@drawable/rounded_edittext"
                        android:drawableTop="@drawable/ic_lock"
                        android:paddingTop="50dp"
                />

                <Button
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="Supplier"
                        android:background="@drawable/rounded_edittext"
                        android:drawableTop="@drawable/ic_lock"
                        android:paddingTop="50dp"
                />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>